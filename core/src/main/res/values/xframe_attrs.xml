<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!--标题栏的背景颜色-->
    <attr name="xframe_actionbar_color" format="color"/>
    <!--标题栏的高度-->
    <attr name="xframe_actionbar_height" format="dimension"/>
    <!--标题栏标题文字的大小-->
    <attr name="xframe_actionbar_title_text_size" format="dimension"/>
    <!--标题栏副标题文字的大小-->
    <attr name="xframe_actionbar_sub_text_size" format="dimension"/>
    <!--标题栏动作文字的大小-->
    <attr name="xframe_actionbar_action_text_size" format="dimension"/>
    <!--标题栏动作图片的padding-->

    <attr name="xframe_actionbar_action_horizontal_padding" format="dimension"/>
    <attr name="xframe_actionbar_action_vertical_padding" format="dimension"/>
    <!--标题栏两侧文字的padding-->
    <attr name="xframe_actionbar_side_text_padding" format="dimension"/>


    <!--标题栏文字的颜色-->
    <attr name="xframe_actionbar_text_color" format="color"/>

    <declare-styleable name="TitleBar">
        <!--标题栏的高度，默认52dp-->
        <attr name="tb_barHeight" format="dimension" />
        <!--是否是沉浸式标题栏，默认是false-->
        <attr name="tb_immersive" format="boolean" />
        <!--左右图标和文字的水平方向padding-->
        <attr name="tb_action_horizontal_padding" format="dimension" />
        <!--左右图标和文字的垂直方向padding-->
        <attr name="tb_action_vertical_padding" format="dimension" />
        <attr name="tb_sideTextPadding" format="dimension" />
        <!--文字的颜色-->
        <attr name="tb_sideTextColor" format="color" />
        <attr name="tb_titleTextColor" format="color" />
        <attr name="tb_subTitleTextColor" format="color" />
        <attr name="tb_actionTextColor" format="color" />
        <!--中间title的对齐方式-->
        <attr name="tb_centerGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--文字的大小-->
        <attr name="tb_sideTextSize" format="dimension" />
        <attr name="tb_titleTextSize" format="dimension" />
        <attr name="tb_subTitleTextSize" format="dimension" />
        <attr name="tb_actionTextSize" format="dimension" />
        <!--文字的内容以及图标内容-->
        <attr name="tb_leftImageResource" format="reference" />
        <attr name="tb_leftText" format="string" />
        <attr name="tb_titleText" format="string" />
        <attr name="tb_subTitleText" format="string" />
        <attr name="tb_dividerColor" format="color" />
    </declare-styleable>
    <attr name="XFrameTitleBarStyle" format="reference" />

</resources>